#!/bin/bash

sudo apt-get update
sudo apt-get dist-upgrade

sudo apt-get install --yes --force-yes \
  virtualbox-4.3 \
  dropbox \
  skype \
  gimp \
  curl tree htop \
  tmux \
  git gitg \
  autoconf \
  vim-nox vim-gnome \
  icedtea-plugin \
  sqlite3 libsqlite3-dev \
  ubuntu-restricted-extras \
  lxc redir \
  google-chrome-stable \
  linux-image-extra-`uname -r`

sudo apt-get install lxc-docker

sudo apt-get clean
